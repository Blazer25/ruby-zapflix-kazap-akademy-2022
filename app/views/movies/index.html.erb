<div class="card mb-3 col-12 dark-gray-6">
  <div class="row g-0 rounded dark-gray-6">
    <div class="col">
      <div class="card-body">
        <div class="row d-flex">
          <div class="col">
            <h1 class="d-flex align-itens-center">Filmes Cadastrados</h1>
            <a href="/movies/new" class="d-flex justify-content-end mb-4" style="text-decoration:none;"><button class="botao-novo">Novo</button></a>
          </div>
        </div>
        <div class="col-12">
          <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Diretor</th>
                <th scope="col">Gênero</th>
                <th scope="col">Estreia</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
              <div id="movies">
                <% @movies.each do |movies| %>
                </div>
                <tr>
                  <td>  <%= movies.titulo %></td>
                  <td>  <%= movies.diretor %></td>
                  <td>  <%= movies.genero %></td>
                  <td>  <%= movies.estreia %></td>
                  <td><a href="/movies/<%=movies.id %>/edit"><button>E</button></a>  <a href="#"><button>X</button></a>  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
</div>
