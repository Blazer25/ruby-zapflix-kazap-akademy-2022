<div class="card mb-3 col-12 dark-gray-6">
  <div class="row g-0 rounded dark-gray-6">
    <div class="col">
      <div class="card-body">
        <div class="row d-flex">
          <div class="col">
            <h1 class="d-flex align-itens-center">Filmes Cadastrados</h1>
            <a href="/movies/new" class="d-flex justify-content-end mb-4" style="text-decoration:none;"><button class="botao-rosa">Novo</button></a>
          </div>
        </div>
        <div class="col-12">
          <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col" class="text-center">Titulo</th>
                <th scope="col" class="text-center">Diretor</th>
                <th scope="col" class="text-center">Gênero</th>
                <th scope="col" class="text-center">Estreia</th>
                <th scope="col" class="text-center">Ações</th>
              </tr>
            </thead>
            <tbody>
              <div id="movies">
                <% @movies.each do |movies| %>
                </div>
                <tr>
                  <td class="text-center">  <%= tratar_valor(movies.titulo) %></td>
                  <td class="text-center">  <%= tratar_valor(movies.diretor) %></td>
                  <td class="text-center">  <%= tratar_valor(movies.genero) %></td>
                  <td class="text-center">  <%= formatar_data(movies.estreia) %></td>
                  <td class="text-center"><a href="/movies/<%=movies.id %>"><%= image_tag 'settings-gears.png'%></a></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
