<div class="card mb-3 col-12 dark-gray-6">
  <div class="row g-0 rounded dark-gray-6">
    <div class="col">
      <div class="card-body">
        <div class="col">
          <h1 class="d-flex align-itens-center">Gêneros</h1>
          <a href="/movie_genres/new" class="d-flex justify-content-end mb-4" style="text-decoration:none;"><button class="botao-rosa">Novo</button></a>
        </div>
        <div class="row">
          <div class="col-12">
            <table class="table table-dark">
              <thead>
                <tr>
                  <th scope="col">Nome</th>
                  <th scope="col">Criado em</th>
                  <th scope="col">Ações</th>
                </tr>
              </thead>
              <tbody>
                <div id="movies_genres">
                  <% @movie_genres.each do |movie_genres| %>
                  </div>
                  <tr>
                    <td>  <%= tratar_valor(movie_genres.genero) %></td>
                    <td>  <%= formatar_data(movie_genres.created_at) %></td>
                    <td><a href="/movie_genres/<%=movie_genres.id %>/edit"><%= image_tag 'editIcon.png'%></a>   <a href="/movie_genres/<%=movie_genres.id %>"><%= image_tag 'deleteIcon.png'%></a>  </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
